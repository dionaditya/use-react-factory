{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "types": ["jest", "node"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
  },
  "include": [
    "src",
    "test/*.test.ts",
   "test/library.test.tsx",
    "global.d.ts",   
    "tools/testHook.tsx", ],
 
}
